#include<stdio.h>

int bubble_sort(int[], int);
int display(int[],int);

int main()
{
    int a[]={10, 56, 1, 88, 44, 32, 87};
    int size=sizeof(a)/sizeof(a[0]);

    bubble_sort(a, size);
    display(a, size);
    return 0;
}

int bubble_sort(int arr[], int size)
{
    for(int i=0;i<size;i++)
    {
        for(int j=0;j<size-1-i;j++)
        {
            if(arr[j]>arr[j+1])
            {
                int temp=arr[j];
                arr[j]=arr[j+1];
                arr[j+1]=arr[j];
            }
        }
    }
}

int display(int arr[], int size)
{
    printf("Sorted Array: ");
    for(int i=0;i<size;i++)
    {
        printf("%d\t",arr[i]);
    }
}